**EXEMPLE CREACIÓ + CRIDA DE MÈTODES**

package com.iesebre;

class Alumne {
    String nom;
    int edat;
    String cognom;

    void saludar(){
        System.out.println("Hola, em dic " + nom);
    }
    void edat(){
        System.out.println("Tinc " + edat + " anys");
    }
    void cognom(){
        System.out.println("El meu cognom és " + cognom);
    }
}

public class Main {
    public static void main(String[] args) {
        Alumne alumne = new Alumne();

        alumne.nom="Ivan";
        alumne.edat=18;
        alumne.cognom="Oliveros";

        alumne.saludar();
        alumne.edat();
        alumne.cognom();
        }
    }


**EXEMPLE MÈTODES + BUCLES + ARRAYS**

package com.iesebre;
import java.util.Scanner;

class Alumne {
    String nom;

    void Alumne(){}
    void saludar(){
        System.out.println("Hola, em dic " + nom);
    }
}

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        Alumne alumne[] = new Alumne[10];

        for (int i=0; i<10; i++){
            alumne[i] = new Alumne();
            System.out.print("Nom alumne " +i+ ": ");
            alumne[i].nom=sc.nextLine();
            alumne[i].saludar();
        }
        alumne[5].saludar();
    }
}
